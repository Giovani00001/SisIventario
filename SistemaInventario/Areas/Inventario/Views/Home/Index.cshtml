@model IEnumerable<SistemaInventario.Modelos.Producto>
@using SistemaInventario.Utilidades
@{
    ViewData["Title"] = "Productos";
}

<header class="header">
    <div class="container pt-sm-5">
        <div class="heading-primary">
            Los mejores productos & <br />
            marcas de la tineda
        </div>
    </div>
</header>

<section>

    <div class="container my-2">
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Buscar ..." aria-label="Buscarr" aria-describedby="button-addon2" />
            <button class="btn btn-outline-primary">
                <i class="bi bi-search-heart"></i>
            </button>
        </div>

        <div class="row">

            @foreach (var producto in Model)
            {
                <div class="col-lg-3 col-md-6 col-sm-6 d-flex">
                    <div class="card w-100 my-2">
                        <img src="@Ds.ImagenRuta@producto.ImagenUrl" class="card-img-top" style="aspect-ratio:1/1" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@producto.Descripcion</h5>
                            <p class="card-text">$ @string.Format("{0:#,###0.000}", producto.Precio)</p>
                            <div class="card-footer d-flex align-items-end pt-3 px-0 pb-0 bg-white">
                                <a class="btn btn-outline-primary">
                                    <i class="bi bi-tags"></i> Detalle 
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>



    </div>

</section>